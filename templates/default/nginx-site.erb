<% if !node[:ghost][:ssl_cert] || !node[:ghost][:ssl_key] %>
server {
  listen       80 default_server;

  access_log  /var/log/nginx/ghost-access.log;
  error_log   /var/log/nginx/ghost-error.log;

  client_body_in_file_only clean;
  client_body_buffer_size 32k;

  client_max_body_size 300M;

  sendfile on;
  send_timeout 300s;

  location ~ ^/(img/|css/|lib/|vendor/|fonts/|robots.txt|humans.txt) {
    root <%= @dir %>/core/client/assets;
    access_log off;
    expires max;
  }

  location ~ ^/(shared/|built/) {
    root <%= @dir %>/core;
    access_log off;
    expires max;
  }

  location ~ ^/(favicon.ico) {
    root <%= @dir %>/core/shared;
    access_log off;
    expires max;
  }

  location ~ ^/(content/images/) {
    root <%= @dir %>;
    access_log off;
    expires max;
  }

  location / {
    proxy_redirect	   off;
    proxy_set_header   X-Real-IP            $remote_addr;
    proxy_set_header   X-Forwarded-For  $proxy_add_x_forwarded_for;
    proxy_set_header   X-Forwarded-Proto $scheme;
    proxy_set_header   Host                   $http_host;
    proxy_set_header   X-NginX-Proxy    true;
    proxy_set_header   Connection "";
    proxy_http_version 1.1;
    server_tokens off;
    proxy_buffering on;
    proxy_pass             http://localhost:2368/;
  }
}
<% end %>
<% if node[:ghost][:ssl_cert] and node[:ghost][:ssl_key] %>
server {
  listen 80;
  return 301 https://$host$request_uri;
}

server {
  listen 443 default_server;

  ssl on;

  ssl_certificate <%= ::File.join(node[:ghost][:ssl_cert_path], node[:ghost][:domain] + ".crt") %>;
  ssl_certificate_key <%= ::File.join(node[:ghost][:ssl_key_path], node[:ghost][:domain] + ".key") %>;
  <% if node[:ghost][:ssl_cacert] %>
  ssl_client_certificate <%= ::File.join(node[:ghost][:ssl_cacert_path], node[:ghost][:domain] + ".ca.crt") %>;
  <% end %>

  ssl_session_timeout 5m;
  ssl_protocols SSLv3 TLSv1;
  ssl_ciphers ALL:!ADH:!EXPORT56:RC4+RSA:+HIGH:+MEDIUM:+LOW:+SSLv3:+EXP;
  ssl_prefer_server_ciphers on;

  client_body_in_file_only clean;
  client_body_buffer_size 32k;

  client_max_body_size 300M;

  sendfile on;
  send_timeout 300s;

  access_log  /var/log/nginx/ghost-ssl_access.log;
  error_log   /var/log/nginx/ghost-ssl_error.log;

  location ~ ^/(img/|css/|lib/|vendor/|fonts/|robots.txt|humans.txt) {
    root <%= @dir %>/core/client/assets;
    access_log off;
    expires max;
  }

  location ~ ^/(shared/|built/) {
    root <%= @dir %>/core;
    access_log off;
    expires max;
  }

  location ~ ^/(favicon.ico) {
    root <%= @dir %>/core/shared;
    access_log off;
    expires max;
  }

  location ~ ^/(content/images/) {
    root <%= @dir %>;
    access_log off;
    expires max;
  }

  location / {
    proxy_redirect         off;
    proxy_set_header   X-Real-IP            $remote_addr;
    proxy_set_header   X-Forwarded-For  $proxy_add_x_forwarded_for;
    proxy_set_header   X-Forwarded-Proto $scheme;
    proxy_set_header   Host                   $http_host;
    proxy_set_header   X-NginX-Proxy    true;
    proxy_set_header   Connection "";
    proxy_http_version 1.1;
    server_tokens off;
    proxy_buffering on;
    proxy_pass             http://localhost:2368/;
  }

  <%= @additional_config %>

}
<% end %>
